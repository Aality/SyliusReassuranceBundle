<div id="aa-reassurance" class="aa-reassurance-1 my-5">
    <div class="container">
        <div class="row justify-content-center">
            {% for reassurance in reassurances %}
                <div class="reassurance col-md-6 col-lg-3 mt-3 mt-lg-0 mb-0">
                    {% if reassurance.image %}
                        <img class="mb-4" src="{{ asset('uploads/reassurances/' ~ reassurance.image) }}"
                             width="{% if configuration and configuration.iconSize %}{{ configuration.iconSize }}{% else %}115{% endif %}"
                             alt="{{ reassurance.title }}"/>
                    {% endif %}
                    <p class="reassurance__title mb-3">{{ reassurance.title }}</p>
                    <p class="reassurance__text mb-0">{{ reassurance.text }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>