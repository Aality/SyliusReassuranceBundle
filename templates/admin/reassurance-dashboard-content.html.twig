{% if hookable_metadata.context.has("form") %}
    {% set form = hookable_metadata.context.form %}
{% endif %}

{% if hookable_metadata.context.has("aalityBanner") %}
    {% set aalityBanner = hookable_metadata.context.aalityBanner %}
{% endif %}

{% if form is defined %}

    {% if resource is not defined %}
        {% set resource = hookable_metadata.context.resource|default(null) %}
    {% endif %}

    {% form_theme form '@SyliusAdmin/shared/form_theme.html.twig' %}



    <div class="container-xl" {% if attributes is defined %} {{ attributes }} {% endif %}>
        {{ aalityBanner|raw }}
        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'id': form.vars.id}}) }}

        <div class="card">
            <div class="card-header">
                <h1 class="mb-0">
                    {{ 'aality_reassurance.ui.settings'|trans }}
                </h1>
            </div>
            <div class="card-body">

                {{ form_errors(form) }}
                {{ form_widget(form._token) }}
                {{ form_widget(form) }}

                <button class="btn btn-primary" type="submit">
                    {{ 'aality_reassurance.ui.save'|trans }}
                </button>
            </div>
            {{ form_end(form, {render_rest: hookable_metadata.configuration.render_rest|default(false)}) }}
        </div>
    </div>

{% endif %}
